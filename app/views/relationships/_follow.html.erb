<% @items.each do |item| %>
  <ul class="list-group">
    <li class="list-group-item clearfix">
      <%= form_for [:item, Relationship.new(follower_id: item.id)] do |f| %>
        <div><%= f.hidden_field :follower_id %></div>
        <%= f.submit "Follow", class: "btn btn-large btn-primary" %>
      <% end %>
      <h3><%= link_to item.name, item_path(item), target: '_blank' %></h3>
      <% if item.item_images.exists? %>
        <div class="media">
          <%= link_to image_tag(item.item_images.first.image.url(:thumb),
            class: 'media-object'),
            #item.item_images.first.image.url,
            item_path(item),
            target: '_blank' %>
        </div>
      <% else %>
        No attachment available!
      <% end %>
    </li>
  </ul>
<% end %>
