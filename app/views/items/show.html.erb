<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @item.name %>
</p>

<p>
  <strong>Description:</strong>
  <%= @item.description %>
</p>

<p>
  <strong>User:</strong>
  <%= @item.user %>
</p>

<% @item.item_images.each do |item_image| %>
  <div class="media">
    <div class="media-left">
      <%= link_to image_tag(item_image.image.url(:thumb),
        class: 'media-object'),item_image.image.url,
        target: '_blank' %>
    </div>
  </div>
<% end %>

<%= link_to 'Edit', edit_item_path(@item) %> |
<%= link_to 'Back', items_path %>
