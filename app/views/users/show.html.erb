<% provide(:title, @user.email) %>
<section class="all-items">
  <header>
    <h1 class="h3">My Item</h1>
  </header>

  <ol class="list-group">
    <% @items.each do |item| %>
      <li class="list-group-item">
        <h3><%= item.name %></h3>
        <% if item.item_images.exists? %>
          <div class="media">
            <%= link_to image_tag(item.item_images.first.image.url(:thumb),
              class: 'media-object'),
              item.item_images.first.image.url,
              target: '_blank' %>
          </div>
        <% else %>
          <div class="media">
            <%= link_to image_tag("/icons/icon.gif", class: "menu_icon") %>
          </div>
        <% end %>
      </li>
    <% end %>
  </ol>
</section>

<div class="span8">
  <% if @user.items.any? %>
    <h3>Items (<%= @user.items.count %>)</h3>
    <%= will_paginate @items %>
  <% end %>
</div>
