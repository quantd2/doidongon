<% provide(:title, @user.email) %>
<section class="all-items">
  <header>
    <h1 class="h3">My Item</h1>
  </header>
  
  <div class="span8">
    <% if @user.items.any? %>
      <h3>Items (<%= @user.items.count %>)</h3>
      <ol class="list-group">
        <%= render @items %>
      </ol>

      <%= will_paginate @items %>

    <% end %>
  </div>
</section>
